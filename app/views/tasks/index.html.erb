<% if logged_in? %>
  <h1>タスク一覧</h1>

  <p>ログイン完了ユーザ: <%= current_user.name %></p>

  <ul>
    <% @tasks.each do |task| %>
      <% if current_user == task.user %>
        <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "新規タスクの登録", new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %>

<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>







